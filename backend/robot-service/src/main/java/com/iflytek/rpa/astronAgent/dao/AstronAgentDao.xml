<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iflytek.rpa.astronAgent.dao.AstronAgentDao">

    <!-- 根据用户ID获取租户ID列表 -->
    <select id="getTenantIdsByUserId" resultType="java.lang.String">
        SELECT tenant_id
        FROM ${databaseName}.t_uap_tenant_user
        WHERE user_id = #{userId}
        AND status = 1
    </select>

    <!-- 根据租户ID列表获取个人租户ID（个人租户通常tenant_code不包含企业标识ep_或es_） -->
    <select id="getPersonalTenantId" resultType="java.lang.String">
        SELECT id
        FROM ${databaseName}.t_uap_tenant
        WHERE id IN
        <foreach collection="tenantIds" item="tenantId" open="(" close=")" separator=",">
            #{tenantId}
        </foreach>
        AND is_delete = 0
        AND tenant_code LIKE 'pe_%'
        ORDER BY create_time ASC
        LIMIT 1
    </select>

</mapper>
